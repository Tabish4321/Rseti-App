<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dp_20">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/top_home"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="">



        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:layout_marginStart="@dimen/dp_20"
            android:padding="@dimen/dp_5"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back_ios_new"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFormName"
            android:text="@string/form_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>


    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:id="@+id/orgImage"
        android:src="@drawable/organization"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvOrganization"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOrganization"
        android:text="@string/organisation_name"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_5"
        android:fontFamily="@font/avenir_next_semi_bold"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/orgImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOrganizationName"
        android:text="@string/organisation_name"
        android:textSize="@dimen/sp_16"
        android:layout_marginStart="@dimen/dp_5"
        android:padding="@dimen/dp_4"
        android:fontFamily="@font/avenir_next_regular"
        app:layout_constraintTop_toBottomOf="@+id/tvOrganization"
        app:layout_constraintStart_toEndOf="@+id/orgImage"
        />

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:id="@+id/instImage"
            android:src="@drawable/institute"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvInstitute"
            app:layout_constraintTop_toBottomOf="@+id/tvOrganizationName"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvInstitute"
            android:text="@string/institute_name"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/avenir_next_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/tvOrganizationName"
            app:layout_constraintStart_toEndOf="@+id/instImage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvInstituteName"
            android:text="@string/institute_name"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/avenir_next_regular"
            app:layout_constraintTop_toBottomOf="@+id/tvInstitute"
            app:layout_constraintStart_toEndOf="@+id/orgImage"
            />

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:id="@+id/participatingOfficialImage"
            android:src="@drawable/baseline_person_24"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvparticipatingOfficial"
            app:layout_constraintTop_toBottomOf="@+id/tvInstituteName"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvparticipatingOfficial"
            android:text="@string/participating_official"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/avenir_next_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/tvInstituteName"
            app:layout_constraintStart_toEndOf="@+id/participatingOfficialImage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvparticipatingOfficialName"
            android:text="@string/participating_official"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/avenir_next_regular"
            app:layout_constraintTop_toBottomOf="@+id/tvparticipatingOfficial"
            app:layout_constraintStart_toEndOf="@+id/instImage"
            />


        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:id="@+id/desiginationImage"
            android:src="@drawable/disignation"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvdesigination"
            app:layout_constraintTop_toBottomOf="@+id/tvparticipatingOfficialName"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvdesigination"
            android:text="@string/designation"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/avenir_next_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/tvparticipatingOfficialName"
            app:layout_constraintStart_toEndOf="@+id/desiginationImage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvdesiginationName"
            android:text="@string/designation"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/avenir_next_regular"
            app:layout_constraintTop_toBottomOf="@+id/tvdesigination"
            app:layout_constraintStart_toEndOf="@+id/desiginationImage"
            />

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:id="@+id/eapIdImage"
            android:src="@drawable/id"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvEapId"
            app:layout_constraintTop_toBottomOf="@+id/tvdesiginationName"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEapId"
            android:text="@string/eap_id"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/avenir_next_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/tvdesiginationName"
            app:layout_constraintStart_toEndOf="@+id/eapIdImage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eapIdName"
            android:text="@string/eap_id"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/avenir_next_regular"
            app:layout_constraintTop_toBottomOf="@+id/tvEapId"
            app:layout_constraintStart_toEndOf="@+id/eapIdImage"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/avenir_next_demi_bold"
            android:padding="@dimen/dp_4"
            android:text="@string/date"
            android:id="@+id/tvSelectDate"
            android:layout_marginStart="@dimen/dp_30"
            android:textColor="@color/color_dark_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eapIdName"/>


        <TextView
            android:id="@+id/tvDate"
            style="@style/EditText"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:hint="@string/select_date"
            android:textColor="@color/color_dark_green"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:textSize="15sp"
            app:drawableEndCompat="@drawable/dobb"
            tools:ignore="LabelFor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSelectDate"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/avenir_next_demi_bold"
            android:padding="@dimen/dp_4"
            android:text="@string/total_participants"
            android:id="@+id/tvSelectTotalParti"
            android:layout_marginStart="@dimen/dp_30"
            android:textColor="@color/color_dark_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"/>
        <EditText
            android:id="@+id/etTotalParticipant"
            style="@style/EditText"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:drawableEnd="@drawable/baseline_people_outline_24"
            android:hint="@string/select_total_participants"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="5"
            android:paddingHorizontal="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSelectTotalParti" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/avenir_next_demi_bold"
            android:padding="@dimen/dp_4"
            android:text="@string/name_of_organization"
            android:id="@+id/tvSelectNameOfOrg"
            android:layout_marginStart="@dimen/dp_30"
            android:textColor="@color/color_dark_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etTotalParticipant"/>
        <EditText
            android:id="@+id/etNameOfOrgt"
            style="@style/EditText"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:hint="@string/name_of_org"
            android:imeOptions="actionNext"
            android:paddingHorizontal="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSelectNameOfOrg" />


        <LinearLayout
            android:id="@+id/llProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNameOfOrgt">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/program_name"
                android:textColor="@color/color_dark_green" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:hint="@string/select_program_name"
                android:padding="1dp"
                android:textColorHint="@color/color_dark_green"
                app:boxStrokeColor="@color/color_dark_green">

                <AutoCompleteTextView
                    android:id="@+id/spinnerProgramName"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"
                    android:textColor="@color/color_dark_green"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expandAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="visible"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llProgram">

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/avenir_next_demi_bold"
            android:padding="@dimen/dp_4"
            android:text="@string/state"
            android:textColor="@color/color_dark_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerAutoState"
            android:fontFamily="@font/avenir_next_demi_bold"
            android:hint="@string/select_state"
            android:padding="1dp"
            android:textColorHint="@color/color_dark_green"
            app:boxStrokeColor="@color/color_dark_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvState">

            <AutoCompleteTextView
                android:id="@+id/spinnerState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:textColor="@color/color_dark_green"
                android:textSize="15sp"
                tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:id="@+id/llDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAutoState">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/district"
                android:textColor="@color/color_dark_green" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerAutoDistrict"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:hint="@string/select_district"
                android:padding="1dp"
                android:textColorHint="@color/color_dark_green"
                app:boxStrokeColor="@color/color_dark_green">

                <AutoCompleteTextView
                    android:id="@+id/spinnerDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"
                    android:textColor="@color/color_dark_green"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/TvDisName"
                style="@style/EditText"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="@string/select_district"
                android:padding="12dp"
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvState"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llDistrict">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/Block"
                android:textColor="@color/color_dark_green" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:hint="@string/select_Block"
                android:padding="1dp"
                android:textColorHint="@color/color_dark_green"
                app:boxStrokeColor="@color/color_dark_green">

                <AutoCompleteTextView
                    android:id="@+id/spinnerBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"
                    android:textColor="@color/color_dark_green"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llGp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llBlock">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/Gp"
                android:textColor="@color/color_dark_green" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:hint="@string/select_gp"
                android:padding="1dp"
                android:textColorHint="@color/color_dark_green"
                app:boxStrokeColor="@color/color_dark_green">

                <AutoCompleteTextView
                    android:id="@+id/spinnerGp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"
                    android:textColor="@color/color_dark_green"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVillage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llGp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/Village"
                android:textColor="@color/color_dark_green" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:hint="@string/select_Village"
                android:padding="1dp"
                android:textColorHint="@color/color_dark_green"
                app:boxStrokeColor="@color/color_dark_green">

                <AutoCompleteTextView
                    android:id="@+id/spinnerVillage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"
                    android:textColor="@color/color_dark_green"
                    android:textSize="15sp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/no_of_application_expected"
                android:id="@+id/tvNoOfAppExpec"
                android:textColor="@color/color_dark_green" />
            <EditText
                android:id="@+id/etNoOfAppExpec"
                style="@style/EditText"
                android:hint="@string/enter_no_of_application_expected"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="5"
                android:paddingHorizontal="@dimen/dp_20" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/brief_description"
                android:id="@+id/tvBrief"
                android:textColor="@color/color_dark_green" />
            <EditText
                android:id="@+id/etBrief"
                style="@style/EditText"
                android:hint="@string/enter_brief_description"
                android:imeOptions="actionNext"
                android:paddingHorizontal="@dimen/dp_20" />







            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:padding="@dimen/dp_4"
                android:text="@string/capture_image"
                android:textColor="@color/color_dark_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@drawable/captureimage"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:padding="@dimen/dp_5"/>

                <ImageView
                    android:id="@+id/image2"
